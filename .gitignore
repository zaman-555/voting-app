# Create .gitignore if you don't have one
cat > .gitignore << EOF
# Environment files
.env
.env.local
.env.production

# Docker
docker-compose.override.yml

# Logs
logs
*.log
npm-debug.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Dependency directories
node_modules/

# IDE files
.vscode/
.idea/
*.swp
*.swo

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Database data
data/
*.db
*.sqlite
EOF

# Add and commit the .gitignore
git add .gitignore
git commit -m "Add .gitignore"